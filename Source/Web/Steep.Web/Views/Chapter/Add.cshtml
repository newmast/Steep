@model Steep.Web.ViewModels.Chapter.AddChapterViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Add", "Story", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a story</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Title, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ExtendedStoryId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.ExtendedStoryId, new { List = Model.ExtendedStory, @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(m => m.ExtendedStoryId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PreviousChapterId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.PreviousChapterId, new { List = Model.PreviousChapterSelect, @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(m => m.PreviousChapterId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Content, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div id="create-story-button" class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create story" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>