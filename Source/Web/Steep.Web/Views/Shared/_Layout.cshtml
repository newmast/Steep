<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Steep</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo-css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Steep", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("Add story", "Add", "Story", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("Add chapter", "Add", "Chapter", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("All chapters", "All", "Chapter", new { area = string.Empty }, null)</li>
                    @if (this.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Administer chapters", "Index", "ChapterAdmin", new { area = "Administration" }, null)</li>
                        <li>@Html.ActionLink("Administer genres", "Index", "GenreAdmin", new { area = "Administration" }, null)</li>
                        <li>@Html.ActionLink("Administer stories", "Index", "StoryAdmin", new { area = "Administration" }, null)</li>
                        <li>@Html.ActionLink("Administer users", "Index", "UserAdmin", new { area = "Administration" }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="bottom">
            <p>&copy; @DateTime.Now.Year - Steep</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
